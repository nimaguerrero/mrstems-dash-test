# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
indent_size = 4

[*.blade.php]
indent_size = 2

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
